<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.sch.smktelkom_mlg.xirpl6034.pengumpulantugas.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:text="Laporan Pengumpulan Tugas"
        android:id="@+id/textView1"
        style="@style/Base.TextAppearance.AppCompat.Subhead"/>

    <ImageView
        android:layout_width="221dp"
        android:layout_height="125dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_logo"
        android:layout_gravity="center_horizontal"/>


    <EditText
        android:hint="Nama Siswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNama"
        android:layout_gravity="center_horizontal"/>

    <RadioGroup
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupStatus"
        android:measureWithLargestChild="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas X"
            android:id="@+id/radioButton2"
            android:checked="false"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas XI"
            android:id="@+id/radioButton"
            android:checked="false"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Tugas"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        style="@style/Base.TextAppearance.AppCompat.Subhead"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ulangan"
        android:id="@+id/checkBox1"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tugas Harian"
        android:id="@+id/checkBox2"
        android:checked="false"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan"
        android:id="@+id/checkBox3"
        android:checked="false"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/buttonOK"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        tools:text="Hasil"
        android:id="@+id/textViewHasil"/>

</LinearLayout>
